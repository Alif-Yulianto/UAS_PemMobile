<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3" >

    <ImageView
        android:id="@+id/foto"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/foto"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Halo Salam Kenal"
        android:textSize="12pt"
        android:layout_below="@id/foto"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/halo" />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama saya "
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:textSize="9pt"
        android:layout_below="@id/halo" />

    <TextView
        android:id="@+id/namaValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="9pt"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/nameText"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/umurText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Umur "
        android:layout_marginLeft="20dp"
        android:textSize="9pt"
        android:layout_below="@id/namaValue" />

    <TextView
        android:id="@+id/umurValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="9pt"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/umurText"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/jeniskelaminText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jenis Kelamin"
        android:layout_marginLeft="20dp"
        android:textSize="9pt"
        android:layout_below="@id/umurValue" />

    <TextView
        android:id="@+id/jeniskelaminValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="9pt"
        android:layout_below="@id/jeniskelaminText"
        android:layout_marginLeft="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/univText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saya adalah mahasiswa "
        android:textSize="9pt"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/jeniskelaminValue" />

    <TextView
        android:id="@+id/univValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="9pt"
        android:layout_below="@id/univText"
        android:layout_marginLeft="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>